---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('berita')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Berita - Solar Nusantara">
  <main class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight">Berita & Wawasan</h1>
      <p class="text-lg md:text-xl text-gray-600">
        Ikuti perkembangan terbaru, proyek, dan inovasi dari Solar Nusantara.
      </p>
    </div>

    <div class="max-w-4xl mx-auto mt-16 grid grid-cols-1 gap-12">
      {posts.map(post => (
        <a href={`/berita/${post.slug}/`} class="group block">
          <article class="bg-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 flex flex-col md:flex-row items-center">
            {post.data.heroImage && (
              <div class="md:w-1/3 mb-6 md:mb-0 md:mr-8 flex-shrink-0">
                <img src={post.data.heroImage} alt={post.data.title} class="w-full h-auto object-cover rounded-lg shadow-md aspect-video" />
              </div>
            )}
            <div class="flex-grow">
              <p class="text-sm font-semibold text-blue-600 mb-2">
                {post.data.pubDate.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
              </p>
              <h2 class="text-2xl font-bold text-gray-900 group-hover:text-blue-700 transition-colors duration-300">{post.data.title}</h2>
              <p class="mt-3 text-base text-gray-600 line-clamp-2">{post.data.description}</p>
              <div class="mt-4 font-semibold text-blue-600 flex items-center group-hover:text-blue-800">
                Baca Selengkapnya 
                <span class="ml-2 transition-transform duration-300 group-hover:translate-x-2">&rarr;</span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </main>
</Layout>