const partners = [
  { name: "Growatt", logo: "/images/partners/growatt.png" },
  { name: "BPR", logo: "/images/partners/bpr.png" },
  { name: "Solana", logo: "/images/partners/solana.png" },
  { name: "Kijo", logo: "/images/partners/kijo.png" },
