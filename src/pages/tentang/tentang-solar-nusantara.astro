  { name: "Lesso", logo: "/images/partners/lesso.png" },
  { name: "GoodWe", logo: "/images/partners/goodwe.png" },
  { name: "Ukrim", logo: "/images/partners/ukrim.png" },
  { name: "JA Solar", logo: "/images/partners/jasolar.png" },
  { name: "Jinko Solar", logo: "/images/partners/jinkosolar.png" },
  { name: "Trina Solar", logo: "/images/partners/trinasolar.png" },
  { name: "Huawei", logo: "/images/partners/huawei.png" },
  { name: "Sungrow", logo: "/images/partners/sungrow.png" },
  { name: "Cleanergy", logo: "/images/partners/cleanergy.png" },
  { name: "Luminous", logo: "/images/partners/luminous.png" },
  { name: "Leoni", logo: "/images/partners/leoni.png" },
