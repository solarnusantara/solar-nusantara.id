// Data extracted and corrected
const commissioners = [
  {
    name: 'Irjend Pol (Pur) Drs Djoko Mulyono Msi',
    position: 'President Commissioner',
    imageUrl: djokoMulyono,
    linkedinUrl: null
  },
  {
    name: 'Harry Widjaja',
    position: 'Commissioner',
    imageUrl: harryWidjaja,
    linkedinUrl: 'https://www.linkedin.com/in/harry-widjaja-9089a816b/',
  },
];

const directors = [
  {
    name: 'Tedi S. Wintoko',
    position: 'President Director',
    imageUrl: tediWintoko,
    linkedinUrl: 'https://www.linkedin.com/in/tedi-salvani',
  },
  {
    name: 'Aditya Perdana',
    position: 'Director',
    imageUrl: adityaPerdana,
    linkedinUrl: null,
  },
];

const management = [
  {
    name: 'Jericho P. Putranto',
    position: 'Head of Business & Marketing',
    imageUrl: jerichoPutranto,
    linkedinUrl: 'https://www.linkedin.com/in/jericho-prathama-96a23920a/',
  },
  {
    name: 'Ahmad Nando',
    position: 'Head of Engineering',
    imageUrl: ahmadNando,
    linkedinUrl: 'https://www.linkedin.com/in/ahmadnando',
  },
  {
    name: 'Riski Agustina',
    position: 'Head of Administration & Finance',
    imageUrl: riskiAgustina,
    linkedinUrl: 'https://www.linkedin.com/in/riski-agustina-54095293/',
  },
];

const regional = [
    {
    name: 'Wempi Saputra',
    position: 'West Indonesia Regional Manager',
    imageUrl: wempiSaputra,
    linkedinUrl: null, // Corrected from faulty link
  },
  {
    name: 'Pramana Putra',
    position: 'East Indonesia Regional Manager',
    imageUrl: pramanaPutra,
    linkedinUrl: 'https://www.linkedin.com/in/pramana-putra-787ba2109/',
  },
