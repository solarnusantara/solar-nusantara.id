---
// src/components/ProductCarousel.astro

interface Product {
  title: string;
  description: string;
  url: string;
}

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

<section class="bg-white py-8 xl:py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-12">
      <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900">Produk Kami</h2>
      <p class="text-lg text-gray-600">Yang terbaik yang bisa Anda dapatkan</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map(product => (
        <div class="bg-white rounded-lg p-6 flex flex-col shadow-md border border-gray-200">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{product.title}</h3>
          <p class="text-gray-600 flex-grow mb-4">{product.description}</p>
          <a href={product.url} class="text-blue-600 hover:text-blue-800 self-start">
            Baca Selengkapnya &rarr;
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
