<section class="bg-white">
    <div class="container mx-auto px-4">
        <div class="mx-auto text-center lg:mb-16 mb-8">
            <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900">Tonton Video Kami</h2>
