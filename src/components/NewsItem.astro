---
// src/components/NewsItem.astro
import { Image } from 'astro:assets';

interface Props {
  imageSrc: ImageMetadata;
  title: string;
  date: string;
  description: string;
  link: string;
}

const { imageSrc, title, date, description, link } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <Image src={imageSrc} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
    <p class="text-gray-500 text-sm mb-4">{date}</p>
    <p class="text-gray-700 text-base mb-4">{description}</p>
    <a href={link} class="text-blue-600 hover:text-blue-800 font-semibold flex items-center">
      Baca Selengkapnya
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</div>
