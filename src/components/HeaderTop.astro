---
// src/components/HeaderTop.astro
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import SearchBar from './SearchBar.astro';
---

<div class="hidden lg:block bg-white border-b">
  <div class="container mx-auto px-4 py-2 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/">
        <Image src={logo} alt="Solar Nusantara Logo" width={150} loading="eager" />
      </a>
    </div>
    <div class="flex-1 flex justify-center px-8">
      <SearchBar />
    </div>
    <a href="https://sonushub.id/" target="_blank" rel="noopener noreferrer" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-blue-700 transition-colors">
      SonusHUB
    </a>
  </div>
</div>