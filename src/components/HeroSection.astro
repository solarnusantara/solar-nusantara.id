---
// src/components/HeroSection.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/slide1.png';
---

<section class="relative h-[75vh] flex items-center justify-center text-white">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <Image src={heroImage} alt="Solar panels on a roof" class="w-full h-full object-cover" loading="eager" fetchpriority="high" quality={50} />
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4">
    <h1 id="hero-title" class="text-4xl md:text-6xl font-extrabold leading-tight mb-4 opacity-0">
      Solar Nusantara
    </h1>
    <p id="hero-subtitle" class="text-lg md:text-2xl font-medium mb-8 opacity-0">
      ENERGI BARU INDONESIA
    </p>
    <div id="hero-btn" class="opacity-0">
      <a href="/tentang" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-transform hover:scale-105 duration-300">
        Tentang Kami
      </a>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { ease: 'power3.out', duration: 1 } });

    tl.to('#hero-title', { opacity: 1, y: -20, delay: 0.2 })
      .to('#hero-subtitle', { opacity: 1, y: -20 }, '-=0.7')
      .to('#hero-btn', { opacity: 1, y: -20 }, '-=0.7');
  });
</script>